<form action="/board/update" method="post" onsubmit="return onWriteSubmit()">
      <table class="table table-striped">
        <input type="hidden" name="idx" value="<%=row.idx%>"/>
         <tr>
          <th>작성자</th>
          <td><input type="text" name="creator_id" size="60"  id = "creator_id" required/></td>
        </tr>
        <tr>
          <th>제목</th>
          <td><input type="text" name="title" size="60"  id = "title" required/></td>
        </tr>
        <tr>
          <th>내용</th>
          <td><textarea name="content" id="content" cols = "65" rows ="10"  required></textarea></td>
        </tr>
        <tr>
          <th>패스워드</th>
          <td><input type="password" name="passwd" id = "passwd" required/></td>
        </tr>
	<tr>
	  <td colspan="2">
		<button type="submit">글쓰기</button>
		</td>
	</tr>
      </table>
