    <div class="container container-width">
      <form action="/order" method="post">
        <input type='hidden' id="selname" name="selname" value="<%=seller_name%>">
        <div class="content row">
          <div class="page col-md-8" id="scode_content">
                <div class="question-area">
                    <div class="question-dummy clearfix">
                        <table class="table table-striped" width="400">
                            <p><strong><h3>01. 배달정보</h3></strong></p>
                                <hr size="10">
                                <tr>
                                    <th>전화번호</th>
                                    <td><!--로그인 정보로 부터 핸드폰번호 가져올것 -->
                                        <input type="text" id="tel" name="tel" value="<%=row2[0].user_tel%>" size="30" maxlength="50"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>주소</th><!--로그인 정보로 부터 주소정보 가져올것 -->
                                    <td>
                                        <input type="text" id="addr" name="addr" value="<%=row2[0].user_addr%>" size="30" maxlength="50"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>요구사항</th>
                                    <td>
                                        <input type="text" id="etc" name="etc" size="30" maxLength="50">
                                    </td>
                                </tr>
                        </table>
                    </div>
                </div>

                <div class="question-area">
                    <div class="question-dummy clearfix">
                        <table class="table table-striped" width="400">
                            <p><strong><h3>02. 할인적용</h3></strong></p>
                                <hr size="10">
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <p><strong><h3>03. 결제방법 선택</h3></strong></p>
                    <hr size="10">
                    <input type="hidden" id="m_length" name="m_length" value="<%=row1.length%>">
                <div class="pay-total-info">
                    <ul class="list-group">
                        <%
                        var m_name = new Array();
                        var quant = new Array();
                        var code = new Array();
                        var m_price = new Array();
                        var total_price;
                        var total_quent;

                        for(i=0;i<m_quant.length;i+=2)
                        {
                          m_name.push(m_quant[i]);
                          for(j=0;j<row1.length;j++)
                          {
                            if(m_quant[i]==row1[j].menu_name)
                            {
                              m_price.push(row1[j].menu_price);
                              code.push(row1[j].menu_code);
                            }
                          }
                          quant.push(m_quant[i+1]);

                        }
                        total_price=0;

                        for(k=0;k<row1.length;k++)
                        {
                          var price=m_price[k]*quant[k];
                          total_price +=price;
                        %>

                        <input type='hidden' id='m_code[<%=k%>]' name=m_code value='<%=code[k]%>'>
                        <input type="hidden" id="quantity[<%=k%>]" name="quantity" value="<%=quant[k]%>">
                        <li class="list-group-item list-group-item-success"><%=m_name[k]%><strong class="pull-right"><%=price%>원</strong>
                          <ul class="list-unstyled xsmall">
                            <li class="of-h">가격 : <span class="pull-right"> <%=m_price[k]%>원 x <%=quant[k]%></span></li>
                          </ul>
                        </li>

                        <%
                      }
                      %>

                        <li class="list-group-item list-group-item-info">메뉴 종류<strong class="pull-right"><%=row1.length%></strong>
                          <ul class="list-unstyled xsmall">
                            <input type='hidden' id='ord_sum' name='ord_sum' value='<%=total_price%>'>
                            <li class="of-h">총 상품금액 <span class="pull-right"> <%=total_price%>원</span></li>
                          </ul>
                          <br>
                          <button type="button" class="btn btn-warning btn-md btn-block"><span class="add-ord-item">주문 추가하기</span></button>
                        </li>

                        <li class="list-group-item">할인적용<strong class="pull-right">원</strong><strong class="pull-right" id="cpn_cal">0</strong><strong class="pull-right">-</strong></li>

                        <li class="list-group-item list-group-item-success">
                          <strong>최종 결제 금액</strong>
                          <input type='hidden' id='final_sum' name='final_sum' value='<%=total_price%>'>
                          <strong class="pull-right"> 원</strong><strong class="text-primary pull-right"><em class="price"> <%=total_price%></em></strong>
                        </li>
                    </ul>

                    <ul class="list-group">
                      <li class="list-group-item list-group-item-warning"><strong><h4 class="text-center">결제방법</h4></strong>
                        <button type="submit" class="btn btn-info btn-md btn-block">포인트 결제하기</button>
                      </li>
                    </ul>
                </div>
